BoxLayoutExample:

<BoxLayoutExample>:
    orientation: "vertical"
    canvas.before:
        Rectangle:
            source: "res/Bg.jpg"
            pos:  self.pos
            size: self.size
    Label: 
        text: "Pomodoro"
        size_hint: 1, .5

    Label:
        text: "00:00"
        size_hint: 1, .5

    BoxLayout:
        pos_hint:  {"center_x" : 1}   #layout of the three buttons to be fixed to the center
        spacing: "10dp"    
        Button:
            text: "Start"
            size_hint: None, None
            width: "150dp"
            height: "75dp"
            pos_hint:  {"center_y" : .75}
    
        Button:
            text: "Pause"
            size_hint: None, None
            width: "150dp"
            height: "75dp"
            pos_hint:  {"center_y" : .75}

    
        Button:
            text: "Reset"
            size_hint: None, None
            width: "150dp"
            height: "75dp"
            pos_hint:  {"center_y" : .75}

        